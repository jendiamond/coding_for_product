<html>
  <head>
    <script type="text/javascript">
      var truncate = function(text) {
        cutoff_length = 50;
        string_suffix = "...";
        if(text.length >= cutoff_length) {
          text_length = cutoff_length - string_suffix.length;
          shortened_text = text[0..text_length+1];
          return shortened_text + string_suffix;
        }
        else {
          return text;
        }
      }
      truncate("The Princess Bride: S. Morgenstern's Classic Tale of True Love and High Adventure");

    </script>
  </head>
  <body>
    HIIIII
  </body>
</html>
